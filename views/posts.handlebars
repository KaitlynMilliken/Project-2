<div class="row justify-content-center">
  <div class="col-8 text-center mt-2 shadow-lg p-3 mb-5 rounded p-5">
    <div class="display-4">Questions for your doctor?</div>
    <span class="fs-3">See the posts below or create a new post!</span>
    <div class="mt-4 post-list list-group" role="tablist">
      {{#each posts as |post|}}
      <div class="list-group-item" role="tab">
        {{> post-info post }}
      </div>
      {{/each}}
    </div>
    <div class="mt-5">
      <a href="/newPost">
        <button type="button" class="new-post-btn btn-lg btn-primary">New Post <i class="bi bi-plus-circle"></i></button>
      </a>
    </div>
  </div>
</div>

<div class="mt-2 mb-5 row justify-content-center ">
  <div class="col-8">
    <span class="fs-2">Need a fast answer regarding a COVID-19 question? <a href="/FAQ" class="FAQ"> Click here! <i
          class="bi bi-lightbulb"></i></a></span>
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  $('.FAQ').hover(
    function () {
      $('.bi-lightbulb').addClass("bi-lightbulb-fill");
      $('.bi-lightbulb').removeClass("bi-lightbulb");
    },
    function () {
      $('.bi-lightbulb-fill').addClass("bi-lightbulb");
      $('.bi-lightbulb').removeClass("bi-lightbulb-fill");
    });
</script>
<style>
  .new-post-btn {
    width: 100%;
    height: 50px;
  }
</style>