<div class="outer-border">
    <h1 class="h1-login">My Doctor</h1>
<div class="login-border">
<div class="parent-l">
<form class="login-form child-l">
    <div class="form-i">
        <label for="email-login">email:</label>
        <input type="text" id="email-login" />
    </div>
    <div>
        <label for="password-login">password:</label>
        <input type="password" id="password-login" />
    </div>
    <div class="btn-l">
        <button class="post-submit btn btn-primary" type="submit">login</button>
    </div>
</form>

<form class="signup-form child-l">
    <div class="form-u">
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div class="form-i">
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" />
    </div>
    <div>
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" />
    </div>
    <div class="btn-l">
        <button class="post-submit btn btn-primary" type="submit">signup</button>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="isAdmin" id="adminTrue">
        <label class="form-check-label" for="isAdmin">
            Yes
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="isAdmin" id="adminFalse">
        <label class="form-check-label" for="isAdmin">
            No
        </label>
    </div>
</form>
</div>
</div>
</div>
<script src="/javascript/login.js"></script>