<div class="row justify-content-around">
    <div>
        <header class="display-3 text-center">Welcome to My Doctor!</header>
    </div>

    <form class="login-form col-sm-5 col-10 mt-5 shadow-lg p-3 mb-5 rounded p-5">
        <div class="row">
            <span class="fs-2 text-center">Sign In</span>
            <input type="text" id="email-login" placeholder="Email" class="mt-4" />
            <input type="password" class="mt-3" id="password-login" placeholder="Password" />
            <button type="submit" class=" col-12 btn-lg btn-primary mt-4">Login</button>
        </div>
    </form>

    <form class="signup-form col-sm-5 col-10 mt-5 shadow-lg p-3 mb-5 rounded p-5">
        <div class="row">
            <span class="fs-2 text-center">Sign Up</span>
            <input type="text" id="username-signup" class="mt-4" placeholder="Username" />
        </div>
        <div class="row mt-3">
            <input type="text" id="email-signup" placeholder="Email" />
        </div>
        <div class="row mt-3">
            <input type="password" id="password-signup" placeholder="Password" />
        </div>
        <div class="row mt-4">
            <div class="form-check-inline">
                <span class="fs-5">Are you a doctor?</span>
                <input class="form-check-input ms-2" type="radio" name="isAdmin" id="adminTrue">
                <label class="form-check-label" for="isAdmin">Yes</label>
                <input class="form-check-input ms-1" type="radio" name="isAdmin" id="adminFalse">
                <label class="form-check-label" for="isAdmin">No</label>
            </div>
        </div>
        <div class="row mt-4">
            <button type="submit" class="btn-lg btn-primary">Sign Up</button>
        </div>
    </form>
</div>
<script src="/javascript/login.js"></script>
<style>
    input {
        width: 100%;
    }
</style>
